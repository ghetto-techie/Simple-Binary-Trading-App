<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.settings.FAQFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/faqToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:elevation="8dp"
        android:popupTheme="?attr/actionBarPopupTheme"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@color/color_primary"
        app:subtitle="Frequently Asked Questions"
        app:subtitleTextColor="@color/color_primary"
        app:title="FAQ"
        app:titleTextColor="@color/color_primary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFaqs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:listitem="@layout/item_faq" />
</LinearLayout>
