<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_error_red"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="3">

    <ImageView
        android:id="@+id/bannerIcon"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:layout_weight="0.5"
        android:src="@drawable/ic_warning"
        app:tint="@color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bannerMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="New earnings data available. Tap to refresh and see the latest updates. New earnings data available. Tap to refresh and see the latest updates.New earnings data available. Tap to refresh and see the latest updates." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bannerAction"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Connect"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:visibility="visible"
            app:strokeColor="@color/white" />
    </LinearLayout>
</LinearLayout>
