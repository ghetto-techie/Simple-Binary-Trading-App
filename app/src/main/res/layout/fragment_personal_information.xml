<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/personalInformationToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top"
            android:elevation="8dp"
            android:popupTheme="?attr/actionBarPopupTheme"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="@color/color_primary"
            app:subtitle=""
            app:subtitleTextColor="@color/color_primary"
            app:title="Personal Information"
            app:titleTextColor="@color/color_primary" />

        <include layout="@layout/layout_personal_information" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>